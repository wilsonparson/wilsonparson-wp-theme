{
  "name": "wilsonparson-wp-theme",
  "version": "1.0.0",
  "description": "Theme for Wilson Parson's personal website",
  "scripts": {
    "build": "sass css/style.scss css/style.css",
    "live-reload": "browser-sync start --proxy wilsonparson.local --files 'css/*.css' 'js/*.js' '*.php'",
    "dev": "concurrently \"npm run build -- --watch\" \"npm run live-reload\""
  },
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "concurrently": "^8.2.2",
    "sass": "^1.72.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
